# MongoDB Connection
MONGODB_URI=your_mongodb_atlas_connection_string

# JWT Secret (CHANGE THIS!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Admin Registration Key (CHANGE THIS!)
# This key is required to create new admin accounts
# Keep this secret and only share with authorized personnel
ADMIN_REGISTRATION_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION

# Frontend URLs (for CORS)
CLIENT_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001
STUDENT_URL=http://localhost:3002

# Server Configuration
PORT=5000
NODE_ENV=development

# Cloudinary Configuration (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (for notifications - optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@academicx.com
